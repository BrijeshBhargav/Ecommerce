@using Ecommerce.Models

@model Register


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>


<body>
    <section class="h-50 h-custom" style="background-color:  #1A237E;">
        <div class="container py-5 h-50">
            <div class="row d-flex justify-content-center align-items-center h-50">
                <div class="col-lg-3 col-xl-4">
                    <div class="card rounded-2">
                        <img src="https://i0.wp.com/www.magetop.com/blog/wp-content/uploads/2021/07/What-is-ecommerce.jpg?fit=750%2C445&ssl=1"
                             class="w-70" style="border-top-left-radius: .2rem; border-top-right-radius: .2rem;"
                             alt="Sample photo">
                        <div class="card-body p-2 p-md-3">
                            <h3 class="mb-3 pb-2 pb-md-0 mb-md-3 px-md-2">Registration Info</h3>

                            @using (Html.BeginForm())
                            {
                                <div class="row mb-2 pb-2 pb-md-0 mb-md-3">
                                    <div class="col-md-8">
                                        <div class="form-outline ">
                                            <label class="form-label" for="form3Example1q">User Name</label>
                                            @Html.TextBoxFor(model => model.name, new { @class = "form-control", placeholder="Enter Name" })
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2 pb-2 pb-md-0 mb-md-3">
                                    <div class="col-md-8">
                                        <div class="form-outline">
                                            <label class="form-label" for="form3Example1w">EmailId </label>
                                            @Html.TextBoxFor(model => model.emailid, new { @class = "form-control", placeholder="Enter Emailid" })
                                           
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2 pb-2 pb-md-0 mb-md-3">
                                    <div class="col-md-8">
                                        <div class="form-outline">
                                            <label class="form-label" for="form3Example1w">Mobile </label>
                                            @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", placeholder="Enter Mobile" })

                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-2 pb-2 pb-md-0 mb-md-3">
                                    <div class="col-md-8">
                                        <div class="form-outline">
                                            <label class="form-label" for="form3Example1w">Password </label>
                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder="Enter password" })

                                        </div>
                                    </div>
                                </div>
                               
                                <button type="submit" class="btn btn-success btn-sm mb-1">Submit</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

